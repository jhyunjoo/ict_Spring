<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- @어노테이션 방식으로 IoC 컨테이너에게 스프링 빈 생성을 의뢰하기 -->
	<!-- @Component 대신에 @Controller, @Service, @Repository 모두 사용가능 -->
	
	<!-- Namespaces 탭에서 context 추가후 사용 -->
	<!-- 스캔대상 => base-package에서 지정한 spring.mvc.basic_ict05.ch07 패키지 및 하위폴더의 모든 클래스를 스캔한다. 
				스캔대상이면서 @Component가 설정된 클래스들을 자동으로 객체 생성한다.
	-->
	<context:component-scan base-package="spring.mvc.basic_ict05.ch07" />

</beans>
